{
  "assignees": ["@xUnholy"],
  "enabled": true,
  "extends": ["config:base",":gitSignOff"],
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "Renovate Dashboard",
  // Do not rebase PRs
  "rebaseWhen": "conflicted",
  "reviewersFromCodeOwners": true,
  "semanticCommits": true,
  // Do not notify on closed unmerged PRs
  "suppressNotifications": ["prIgnoreNotification"],
  "timezone": "Australia/Melbourne",
  "kubernetes": {
    "fileMatch": ["cluster/.+\\.yaml$"],
    "ignorePaths": [
      "cluster/flux-system/",
      "cluster/actions-runner-system/"
    ]
  },
  "helm-values": {
    "fileMatch": ["cluster/.+helmrelease\\.yaml$"],
  },
  "regexManagers": [
    {
      "fileMatch": ["cluster/.+helmrelease\\.yaml$"],
      "matchStrings": ["registryUrl=(?<registryUrl>.*?)\n *chart: (?<depName>.*?)\n *version: (?<currentValue>.*)\n"],
      "datasourceTemplate": "helm"
    }
  ],
  "packageRules": [
    // Setup datasources
    // auto-merge docker patch version increments
    {
      "datasources": ["docker"],
      "automerge": true,
      "requiredStatusChecks": null,
      "updateTypes": ["patch"],
    },
    // Add labels according to package and update types
    {
      "datasources": ["docker"],
      "updateTypes": ["major"],
      "labels": ["renovate/image-release", "dependency/major"],
      "enabled": true
    },
    {
      "datasources": ["docker"],
      "updateTypes": ["minor"],
      "labels": ["renovate/image-release", "dependency/minor"]
    },
    {
      "datasources": ["docker"],
      "updateTypes": ["patch"],
      "labels": ["renovate/image-release", "dependency/patch"]
    },
    {
      "datasources": ["helm"],
      "commitMessageTopic": "Helm chart {{depName}}",
      "separateMinorPatch": true
    },
    // auto-merge helm patch version increments
    {
      "datasources": ["helm"],
      "automerge": true,
      "requiredStatusChecks": null,
      "updateTypes": ["patch"],
    }
    {
      "datasources": ["helm"],
      "updateTypes": ["major"],
      "labels": ["renovate/helm-release", "dependency/major"]
    },
    {
      "datasources": ["helm"],
      "updateTypes": ["minor"],
      "labels": ["renovate/helm-release", "dependency/minor"]
    },
    {
      "datasources": ["helm"],
      "updateTypes": ["patch"],
      "labels": ["renovate/helm-release", "dependency/patch"]
    },
  ]
}
