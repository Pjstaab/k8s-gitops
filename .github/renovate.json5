{
  "extends": [
    "config:base",
    ":enablePreCommit",
    ":disableRateLimiting",
    ":semanticCommits",
    "docker:enableMajor",
  ],
  "username": "jarvis-plus-bot[bot]",
  "branchPrefix": "renovate/",
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "Renovate Dashboard",
  "dependencyDashboardAutoclose": true,
  "enabled": true,
  "extends": ["config:base", ":gitSignOff"],
  "gitAuthor": "Jarvis Plus Bot <235116+jarvis-plus-bot[bot]@users.noreply.github.com>",
  "commitBody": "Signed-off-by: {{{gitAuthor}}}",
  "platform": "github",
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,
  "rebaseWhen": "conflicted",
  "commitBodyTable": true,
  "repositories": ["xUnholy/k8s-gitops"],
  "onboarding": false,
  "requireConfig": false,
  "reviewersFromCodeOwners": false,
  "semanticCommits": "enabled",
  "configWarningReuseIssue": true,
  "suppressNotifications": ["prIgnoreNotification"],
  "timezone": "Australia/Melbourne",
  "commitMessageTopic": "{{depName}}",
  "commitMessageExtra": "to {{newVersion}}",
  "commitMessageSuffix": "",
  "pre-commit": {
    "enabled": true
  },
  "kubernetes": {
    "fileMatch": [
      "k8s/.+\\.ya?ml$"
    ],
    "ignorePaths": [
      "k8s/clusters/",
      "k8s/namespaces/base/flux-system/",
      "k8s/namespaces/base/actions-runner-system/"
    ]
  },
  "helm-values": {
    "fileMatch": [
      "k8s/.+\\.ya?ml$"
    ]
  },
  "helmv3": {
    "fileMatch": [
      "k8s/.+\\.ya?ml$"
    ]
  },
  "docker-compose": {
    "fileMatch": [
      "(^|\/)docker-compose.*\\.ya?ml$"
    ]
  },
  "flux": {
    "fileMatch": [
      "k8s/.+\\.ya?ml$"
    ]
  },
  "packageRules": [
    {
      "labels": ["renovate/image-release", "dependency/major"],
      "enabled": true,
      "matchDatasources": ["docker"],
      "matchUpdateTypes": ["major"],
      "commitMessageTopic": "image {{depName}}"
    },
    {
      "labels": ["renovate/image-release", "dependency/minor", "merge"],
      "matchDatasources": ["docker"],
      "matchUpdateTypes": ["minor"],
      "commitMessageTopic": "image {{depName}}"
    },
    {
      "labels": ["renovate/image-release", "dependency/patch", "merge"],
      "matchDatasources": ["docker"],
      "matchUpdateTypes": ["patch"],
      "commitMessageTopic": "image {{depName}}"
    },
    {
      "commitMessageTopic": "Helm chart {{depName}}",
      "matchDatasources": ["helm"]
    },
    {
      "labels": ["renovate/helm-release", "dependency/major"],
      "matchDatasources": ["helm"],
      "matchUpdateTypes": ["major"]
    },
    {
      "labels": ["renovate/helm-release", "dependency/minor"],
      "matchDatasources": ["helm"],
      "matchUpdateTypes": ["minor"]
    },
    {
      "labels": ["renovate/helm-release", "dependency/patch", "merge"],
      "matchDatasources": ["helm"],
      "matchUpdateTypes": ["patch"]
    }
  ]
}
